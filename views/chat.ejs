<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Web Chat</title>
  </head>
  <body>
    <div>
      <div>
        <input
          id="nickname-box"
          type="text"
          name="changenick"
          data-testid="nickname-box"
          placeholder="Pleace type a nickname"
        />
        <button
          type="button"
          id="nickname-button"
          data-testid="nickname-button"
        >
          Send
        </button>
      </div>
      <h3>Usu√°rios Online:</h3>
      <ul id="nicksList"></ul>
    </div>
    <div>
      <ul id="messages">
        <% allMessages.forEach((hist) => { %>
        <li data-testid="message">
          <%= `${hist.timeStamp} - ${hist.nickname}: ${hist.chatMessage}`%>
        </li>
        <% }) %>
      </ul>
    </div>

    <section>
      <form>
        <input
          type="text"
          data-testid="message-box"
          placeholder="Digite sua mensagem"
          id="message-box"
        />
        <button type="button" data-testid="send-button" id="send-button">
          Send
        </button>
      </form>
    </section>

    <script src="/socket.io/socket.io.js"></script>
    <script src="./js/chat.js"></script>
  </body>
</html>
