<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Webchat Project</title>
  <link rel="stylesheet" href="../public/css/chat.css">
</head>
<body>
  <div>
    <h1 class='title-page'>Webchat Trybe!</h1>
  </div>
  <ul id="messages" class="messages">
    <% messages.forEach(({ timestamp, nickname, message}) => { %>
    
    <li data-testid="message"> <%= `${timestamp} - ${nickname}: ${message}` %> </li>
    
    <% }) %>
  </ul> 
  <h1 class="name"></h1>
  <form class="form-msg" action="">
    <div>
      <input
        type="text"
        data-testid="nickname-box"
        class="nickname-box"
        placeholder="Nickname"
      />
      <button data-testid="nickname-button" id="nickname-button" onclick="nicknameFunc" class="nickname-button">Salvar</button>
    </div>
    <div>
      <input data-testid="message-box" class="messageInput" autocomplete="off" />
      <button data-testid="send-button">Send</button>
    </div>
  </form>
  <script src="/socket.io/socket.io.js"></script>
  <script src='../js/chat.js'></script>
</body>  
</html>